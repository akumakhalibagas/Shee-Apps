<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray" />

    <TableLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow android:gravity="center">

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_no"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:text="1"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="1 May 2022"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_jam"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="18.00"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lokasi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="Bangsa"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_resiko"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="Close"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_kode_bahaya"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="Green"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="Close"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_temuan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Bagus"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shift"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="Malam"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_site"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="PMSS"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="start"
                android:text="PT Mantap Jaya"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bahaya"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Harus lebih bagus"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pengendalian"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Bagas"
                android:textSize="12sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray" />

</androidx.appcompat.widget.LinearLayoutCompat>