<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shift" />

        <AutoCompleteTextView
            android:id="@+id/et_shift"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_dropdown"
            android:inputType="none"
            android:padding="5dp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Site" />

        <AutoCompleteTextView
            android:id="@+id/et_site"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_dropdown"
            android:inputType="none"
            android:padding="5dp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pelapor" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_pelapor"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:imeOptions="actionNext"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Departemen" />

        <AutoCompleteTextView
            android:id="@+id/et_dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_dropdown"
            android:inputType="none"
            android:padding="5dp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lokasi" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_lokasi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:imeOptions="actionNext"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Temuan" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_temuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:enabled="false"
            android:imeOptions="actionNext"
            android:inputType="text|textMultiLine"
            android:lines="3"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resiko" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_resiko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:enabled="false"
            android:imeOptions="actionNext"
            android:inputType="text|textMultiLine"
            android:lines="3"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kode Bahaya" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_kode_bahaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:enabled="false"
            android:imeOptions="actionNext"
            android:inputType="text|textMultiLine"
            android:lines="3"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pengendalian Resiko" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_pengendalian_resiko"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:enabled="false"
            android:imeOptions="actionNext"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status" />

        <AutoCompleteTextView
            android:id="@+id/et_status"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_dropdown"
            android:inputType="none"
            android:padding="5dp"
            android:textColor="@color/black" />


        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/purple_500"
            android:enabled="false"
            android:paddingStart="6dp"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            tools:ignore="RtlSymmetry" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>